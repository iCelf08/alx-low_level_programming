#include <stdder>
#include "main.h"
/**
 **_strchr - function that locates a caracter in a string
 *@s: pointer at string will be checked
 *@c: character to check
 *Return: pointer ro c or NULL in not found
 */
char *_strchr(char *s, char c)
{
while (*s !='\0')
{
if (*s == c)
{
return(s);
}
s++;
}
return (NULL);
}
